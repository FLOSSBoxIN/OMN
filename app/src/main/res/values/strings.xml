    <!--
     Tag page template
        %1$s    Page name
    -->
    <string name="md_tag_file_template"><![CDATA["Title: Tags

<div id=\"main\" style=\"margin-top: 1em;\"></div>

<script>
// Start of Tags DB
var pageDb = %1$s
// End of Tags DB
</script>

<script>
var tagDb = {};
for ( i in pageDb ) {
  for ( j in pageDb[i]['tags'] ){
    var ctag = pageDb[i]['tags'][j];
    if (!tagDb.hasOwnProperty(ctag))
      tagDb[ctag] = [];
    //tagDb[ctag].push({ 'name': i, 'title': pageDb[i]['title']});
    tagDb[ctag].push(i.trim());
  }
}
var tagsList = '';
for ( t in tagDb ) {
  tagsList += '<span id=\"'
    + encodeURIComponent(
        t.replace(/ /g, '-')
         .replace(/#/g, '')
         .replace(/</g, '')
         .replace(/>/g, '')
         .replace(/\\//g,'')
      )
    + '\" class=\"tagmark\">'
    + t
    + '</span><br />\\n'
    + '<ul>\\n';
  for ( p in tagDb[t] ) {
    pn = tagDb[t][p];
    tagsList += '<li><a href=\"'
      + pn
      + '.html\">'
      + pageDb[pn]['title']
      + '</a></li>\\n';
  }
  tagsList += '</ul>';
}
document.getElementById('main').innerHTML = tagsList;

var selected = window.location.href.split('#')[1];
if (typeof selected != 'undefined')
  document.getElementById(selected).classList.add('tagmarkselected');

</script>
"]]></string>

    <!--
     Javascript called after load any html page
        %1$s    Page name
        %2$b    Inject action button header
        %3$b    Enable Home button
        %4$b    Enable Add new page button
        %5$b    Enable Link button
        %6$b    Enable E-Mail button
        %7$b    Enable File browser button
        %8$b    Enable Rfresh HTML button
        %9$b    Enable Create shortcut button
        %10$b    Enable QuickNotes button
    -->
    <string name="set_html_page_js"><![CDATA["
        javascript:
        var PFN=\'%1$s\';
        document.getElementById(\'actions_header\').innerHTML=\'%2$s\';
        document.getElementById(\'title_arrow\').style.display=\'inline\';

        function enableButton(id, enable) {
            if (enable)
                document.getElementById(id).style.display=\'inline\';
            else
                document.getElementById(id).style.display=\'none\';
        };

        enableButton(\'btnHome\', %3$b);
        enableButton(\'btnAdd\', %4$b);
        enableButton(\'btnLink\', %5$b);
        enableButton(\'btnEMail\', %6$b);
        enableButton(\'btnFolder\', %7$b);
        enableButton(\'btnRefresh\', %8$b);   
        enableButton(\'btnShortcut\', %9$b);
        enableButton(\'btnQuickNotes\', %10$b);
    "]]></string>

