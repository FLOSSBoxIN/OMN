    <!--
     Javascript called after load any html page
        %1$s    Page name
        %2$b    Inject action button header
        %3$b    Enable Home button
        %4$b    Enable Add new page button
        %5$b    Enable Link button
        %6$b    Enable E-Mail button
        %7$b    Enable File browser button
        %8$b    Enable Create shortcut button
        %9$b    Enable QuickNotes button
    -->
    <string name="set_html_page_js"><![CDATA["
        javascript:
        var PFN=\'%1$s\';
        document.getElementById(\'actions_header\').innerHTML=\'%2$s\';
        document.getElementById(\'title_arrow\').style.display=\'inline\';

        function toggleHdrBtnVis() {
          aheader=document.getElementById(\'actions_header\');
          btn=document.getElementById(\'title_arrow\');
          ptitle=document.getElementById(\'ptitle\');
          content=document.getElementById(\'content\');
          if (btn.style.display === \'none\') return;
          if (aheader.style.display !== \'none\') {
            aheader.style.display = \'none\';
            ptitle.style.top = \'0px\';
            btn.innerHTML = \'<i class=\"material-icons\">arrow_drop_down</i>\';
            content.style.top = \'2em\';
          } else {
            aheader.style.display = \'block\';
            ptitle.style.top = \'4.2em\';
            btn.innerHTML = \'<i class=\"material-icons\">arrow_drop_up</i>\';
            content.style.top = \'6em\';
          }
        }

        function enableButton(id, enable) {
            if (enable)
                document.getElementById(id).style.display=\'inline\';
            else
                document.getElementById(id).style.display=\'none\';
        };
        enableButton(\'btnHome\', %3$b);
        enableButton(\'btnAdd\', %4$b);
        enableButton(\'btnLink\', %5$b);
        enableButton(\'btnEMail\', %6$b);
        enableButton(\'btnFolder\', %7$b);
        enableButton(\'btnShortcut\', %8$b);
        enableButton(\'btnQuickNotes\', %9$b);
    "]]></string>

