<resources>

    <!-- Application name -->
    <string name="app_name">Open Markdown Notes</string>

    <!-- Page used to convert Markdown to HTML -->
    <string name="anvil_file" translatable="false">anvil.html</string>

    <!--
    Top part of any html page
        %1$s    Page title
        %2$s    Reference level to top ("../" for 1-st level subdirectory)
        %3$s    Tags
        %4$s    Date
        %5$s    Modified
        %6$s    Category
        %7$s    Authors
        %8$s    Summary
		â„…9$s    Page name
        %10$s    1-st page header (function as page title)
    -->
    <string name="html_top"><![CDATA["<!DOCTYPE html PUBLIC \"-//W3C//DTD XHTML 1.0 Transitional//EN\" \"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd\">
<html xmlns=\"http://www.w3.org/1999/xhtml\">

<head>

  <title>%1$s</title>

  <link rel=\"stylesheet\" type=\"text/css\" href=\"../%2$scss/common.css\" />
  <link rel=\"stylesheet\" type=\"text/css\" href=\"../%2$scss/highlight.css\" />
  <link rel=\"stylesheet\" href=\"https://fonts.googleapis.com/icon?family=Material+Icons\" />
  <link rel=\"stylesheet\" href=\"../%2$sfonts/google-material/material-icons.css\"  />
      

  <meta name=\"viewport\" content=\"width=device-width, initial-scale=1\" />
  <meta http-equiv=\"content-type\" content=\"text/html; charset=UTF-8\" />

  <meta name=\"tags\" content=\"%3$s\" />
  <meta name=\"date\" content=\"%4$s\" />
  <meta name=\"modified\" content=\"%5$s\" />
  <meta name=\"category\" content=\"%6$s\" />
  <meta name=\"authors\" content=\"%7$s\" />
  <meta name=\"summary\" content=\"%8$s\" />

  <style>
    .hBtn {
      padding-left: 3px;
      padding-right: 3px;
    }
    #pageTitle {
      margin-top: 1px;
      margin-bottom: 1em;
    }
  </style>
  <script>
    function toggleHdrBtnVis() {
      element=document.getElementById(\'actions_header\');
      btn=document.getElementById(\'title_arrow\');

      if (element.style.display !== \'none\' && btn.style.display === \'inline\') {
        element.style.display = \'none\';
        btn.innerHTML = \'<i class=\"material-icons\">arrow_drop_down</i>\';
      } else {
        element.style.display = \'block\'
        btn.innerHTML = \'<i class=\"material-icons\">arrow_drop_up</i>\';
      }
    }
  </script>
  <script>
    var PageName = \'%9$s\'
    var Title = \'%10$s\';
  </script>

</head>

<body>
  <div id=\"actions_header\" style=\"display:none\">
    <button
      id=\"btnEdit\"
      class=\"hBtn\"
      onclick=\"Android.editButtonCallback(PFN)\">
      <i class=\"material-icons\">edit</i>
    </button>
    <button
      id=\"btnHome\"
      class=\"hBtn\"
      onclick=\"Android.homeButtonCallback()\">
      <i class=\"material-icons\">home</i>
    </button>
    <button
      id=\"btnLink\"
      class=\"hBtn\"
      onclick=\"Android.linkButtonCallback(PFN, Title)\">
      <i class=\"material-icons\">insert_link</i>
    </button>
    <button
      disabled
      style=\"display:none\"
      id=\"btnShare\"
      class=\"hBtn\"
      onclick=\"Android.editButtonCallback(PFN)\">
      <i class=\"material-icons\">share</i>
    </button>
    <button
      id=\"btnEMail\"
      class=\"hBtn\"
      onclick=\"Android.emailButtonCallback(PFN, Title)\">
      <i class=\"material-icons\">email</i>
    </button>
    <button
      disabled
      style=\"display:none\"
      id=\"btnTOC\"
      class=\"hBtn\"
      onclick=\"Android.editButtonCallback(PFN)\">
      <i class=\"material-icons\">list</i>
    </button>
    <button
      id=\"btnFolder\"
      class=\"hBtn\"
      onclick=\"Android.folderButtonCallback(PFN)\">
      <i class=\"material-icons\">folder_open</i>
    </button>
    <button
      id=\"btnShortcut\"
      class=\"hBtn\"
      onclick=\"Android.shortcutButtonCallback(PFN, Title)\">
      <i class=\"material-icons\">screen_share</i>
    </button>
    <button
      id=\"btnQuickNotes\"
      class=\"hBtn\"
      onclick=\"Android.quicknoteButtonCallback()\">
      <i class=\"material-icons\">receipt</i>
    </button>
    <button
      id=\"btnSettings\"
      class=\"hBtn\"
      onclick=\"Android.prefButtonCallback()\">
      <i class=\"material-icons\">settings</i>
    </button>
    <br />
    Absolute page name:<span>%9$s</span>
    <hr />
  </div>

  <a
    onclick=\"toggleHdrBtnVis();\">
    <h4 id=\"pageTitle\" align=\"center\">
      %10$s
      <span id=\"title_arrow\" style=\"display:none\">
        <i class=\"material-icons\">arrow_drop_down</i>
      </span>
    </h4>
  </a>

  
    "]]></string>

    <!-- Bottom part of any html page -->
    <string name="html_buttom"><![CDATA["
</body>

</html>
    "]]></string>

    <!--
     Javascript called after load any html page
        %1$s    Page name
        %2$b    Enable Home button
        %3$b    Enable Link button
        %4$b    Enable E-Mail button
        %5$b    Enable File browser button
        %6$b    Enable Create shortcut button
        %7$b    Enable QuickNotes button
    -->
    <string name="set_html_page_js">
        javascript:
        var PFN=\'%1$s\';
        document.getElementById(\'title_arrow\').style.display=\'inline\';
        function enableButton(id, enable) {
            if (enable)
                document.getElementById(id).style.display=\'inline\';
            else
                document.getElementById(id).style.display=\'none\';
        }
        enableButton(\'btnHome\', %2$b);
        enableButton(\'btnLink\', %3$b);
        enableButton(\'btnEMail\', %4$b);
        enableButton(\'btnFolder\', %5$b);
        enableButton(\'btnShortcut\', %6$b);
        enableButton(\'btnQuickNotes\', %7$b);
    </string>

    <!--
    JavaScript called at Markdown to HTML convertion time
        %1$s    Page name
        %2$s    Markdown content
        %3$b    Enable code highlight
    -->
    <string name="set_md_page_js_create">
        javascript:
        var PFN=\'%1$s\';
        document.getElementById(\'pname\').innerHTML=\'%1$s\';
        run_marked(\'%2$s\', \'%3$b\');
    </string>

    <!--
    JavaScript called at Markdown to HTML convertion time
        %1$s    Page name
        %2$s    Page title
        %3$s    Markdown content
        %4$b    Enable code highlight
        %5$b    Enable Home button
        %6$b    Enable Link button
        %7$b    Enable E-Mail button
        %8$b    Enable File browser button
        %9$b    Enable Create shortcut button
        %10$b   Enable QuickNotes button
    -->
    <string name="set_md_page_js">
        javascript:
        var PFN=\'%1$s\';
        document.getElementById(\'pname\').innerHTML=\'%1$s\';
        var Title = \'%2$s\';
        document.getElementById(\'title\').innerHTML=\'%2$s\';
        document.getElementById(\'actions_header\').style.display=\'block\';
        run_marked(\'%3$s\', \'%4$b\');
        function enableButton(id, enable) {
            if (enable)
                document.getElementById(id).style.display=\'inline\';
            else
                document.getElementById(id).style.display=\'none\';
        }
        enableButton(\'btnHome\', %5$b);
        enableButton(\'btnLink\', %6$b);
        enableButton(\'btnEMail\', %7$b);
        enableButton(\'btnFolder\', %8$b);
        enableButton(\'btnShortcut\', %9$b);
        enableButton(\'btnQuickNotes\', %10$b);
    </string>

